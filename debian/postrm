#!/bin/sh
# postrm script for ultrabay-scripts
#
# see: dh_installdeb(1)

set -e

remove_wmlive_key ()
{
  if [ "$(apt-key list | grep -c "4096R/2B830BAD 2013-05-10" 2>/dev/null)" != "1" ]
  then
    apt-key del 2B830BAD >/dev/null 2>&1
  fi
}

ULTRABAYRULES=/etc/udev/rules.d/50-ultrabay-devices.rules
ULTRABATTERYRULES=/etc/udev/rules.d/50-ultrabay-battery.rules

case "$1" in
    remove)
	[ -f ${ULTRABAYRULES} ] && rm -f ${ULTRABAYRULES}
	[ -f ${ULTRABATTERYRULES} ] && rm -f ${ULTRABATTERYRULES}
    ;;
    purge)
	remove_wmlive_key
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
